{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PlatformIO: Build, Upload & Monitor",
      "type": "shell",
      "command": "pio",
      "args": ["run", "--target", "upload", "--target", "monitor"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": ["$platformio"],
      "isBackground": false
    }
  ]
}
